generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://angela:123123@localhost:5432/study_sesh"
}

model User {
  id                    Int       @id @default(autoincrement())
  username              String    @unique
  email                 String    @unique
  password              String
  sessions              Session[]
  // Inverse relation for the participants
  sessionsAsParticipant Session[] @relation("SessionParticipants")
}

model Session {
  id           Int      @id @default(autoincrement())
  name         String 
  date         DateTime
  time         String
  location     String
  virtual      Boolean
  ownerId      Int
  owner        User     @relation(fields: [ownerId], references: [id])
  participants User[]   @relation("SessionParticipants")
}

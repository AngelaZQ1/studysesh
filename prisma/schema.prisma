generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  firebaseUid         String @unique // Firebase UID to link Firebase Auth to this user
  id                  Int    @id @default(autoincrement())
  firstName           String
  lastName            String
  email               String @unique
  seshes              Sesh[]
  // Inverse relation for the participants
  seshesAsParticipant Sesh[] @relation("SeshParticipants")
}

model Sesh {
  id           Int       @id @default(autoincrement())
  title        String
  start        DateTime
  end          DateTime
  location     String?
  virtual      Boolean
  ownerId      Int
  owner        User      @relation(fields: [ownerId], references: [id])
  participants User[]    @relation("SeshParticipants")
}
